<%- include('includes/head.ejs') %>
<!-- google fonts -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
<!-- stylesheets -->
<link rel="stylesheet" href="/css/edistyles.css">
<link rel="stylesheet" href="/css/output.css">

</head>
<body>
    <header class="header-nav">
            <h1 class="logo">ReadMeAI</h1>
            <div class="light-container">
                <div class="phone">
                    <span class="material-symbols-outlined" id="rotate-item">
                    phone_iphone</span>
                </div>                    
                <div class="tubelight">
                    <div class="bulb"></div>
                </div>
            </div>
        </header>
        <main class="main">
        <div class="mobile-container">
            <p>Sorry but the editor is disable on mobile device's, but it's best experienced on a PC or Tablet ðŸ˜…</p>
        </div>
        <div class="container" id="codeditor">
            <header class="editor-header">
                <div class="buttoncontainer">
                    <button class="ribbon-button" ><span class="material-symbols-outlined" data-value="IMG">image</span></button>
                    <button class="ribbon-button" ><span class="material-symbols-outlined" data-value="CODE">code</span></button>
                    <button class="ribbon-button" ><span class="material-symbols-outlined" data-value="LIST">list</span></button>
                    <select name="Heading" id="add-heading" style="outline: none;text-transform: uppercase;">
                        <option disabled selected>HEADINGS</option>
                        <option value="H1" style="font-weight:800;color: black;">Heading 1</option>
                        <option value="H2" style="font-weight:700;color: black;">Heading 2</option>
                        <option value="H3" style="font-weight:500;color: black;">Heading 3</option>
                    </select>
                    <button class="ribbon-button" ><span class="material-symbols-outlined" data-value="SOCIAL">public</span></button>
                    <button class="ribbon-button" ><span class="material-symbols-outlined" data-value="URL">link</span></button>
                </div>
                <button class="btn-containers" id="recompile"> 
                    <span class="material-symbols-outlined">bolt</span> 
                </button>
            </header>
            <textarea name="textarea" id="textarea" class="sub-container output-container  container-markdown" ><%= md %></textarea>
        </div>

        <div class="container">
            <header class="preview-header" >
                <h1 class="preview-heading">Preview</h1>
                <form action="/download" method="post" class="form-download">
                    <input type="hidden" name="markdown" id="markdown-inp">
                    <input type="hidden" name="html" id="html-inp">
                    <button class="btn-containers">
                        <span class="material-symbols-outlined" id="download">download</span>
                    </button>
                </form>
            </header>
            <div class="sub-container  container-preview">
                <div class="preview output-container" ><%- html %></div>
            </div>
        </div>


    </main>
    <!-- showdown cdn -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/2.1.0/showdown.min.js" integrity="sha512-LhccdVNGe2QMEfI3x4DVV3ckMRe36TfydKss6mJpdHjNFiV07dFpS2xzeZedptKZrwxfICJpez09iNioiSZ3hA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- ionicons cdn -->
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    <script src="/scripts/edi-script.js"></script>  
    <script src="/scripts/tubelightBtn.js"></script>
</body>